{
  "compilerOptions": {
    "target": "ES2017",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "cjs",
    "src/bin",
    "src/clients"
  ]
}
